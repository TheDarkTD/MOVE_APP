<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/blue1"
tools:context=".patient.PatientHubActivity">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline25h"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline35h"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.35"/>


<androidx.constraintlayout.widget.Guideline
    android:id="@+id/guideline37h"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    app:layout_constraintGuide_percent="0.37"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline45h"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.45"/>
<androidx.constraintlayout.widget.Guideline
    android:id="@+id/guideline5h"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    app:layout_constraintGuide_percent="0.5"/>
<androidx.constraintlayout.widget.Guideline
    android:id="@+id/guideline85h"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    app:layout_constraintGuide_percent="0.85"/>
<androidx.constraintlayout.widget.Guideline
    android:id="@+id/guideline95h"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    app:layout_constraintGuide_percent="0.928"/>

<androidx.constraintlayout.widget.Guideline
    android:id="@+id/guideline1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_constraintGuide_percent="0.1"/>
<androidx.constraintlayout.widget.Guideline
    android:id="@+id/guideline9"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_constraintGuide_percent="0.9"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>


    <EditText
        android:id="@+id/etCPFSearch"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:hint="CPF"
        android:textColor="@color/white" android:textColorHint="@color/white"
        android:background="#005E4A4A" android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/guideline25h"
        app:layout_constraintBottom_toTopOf="@id/guideline35h"
        app:layout_constraintStart_toStartOf="@id/guideline1"
        app:layout_constraintEnd_toEndOf="@id/guideline9"/>


    <Button
        android:id="@+id/btnBuscar"
        android:layout_width="0dp" android:layout_height="0dp"
        android:text="Buscar" android:textStyle="bold"
        android:backgroundTint="@color/blue3"
        android:textColor="@color/blue2"
        app:layout_constraintTop_toBottomOf="@id/guideline37h"
        app:layout_constraintBottom_toTopOf="@id/guideline45h"
        app:layout_constraintStart_toStartOf="@id/guideline5"
        app:layout_constraintEnd_toEndOf="@id/guideline9"/>


    <TextView
        android:id="@+id/tvResult"
        android:layout_width="0dp" android:layout_height="0dp"
        android:background="#CDDDEB"
        android:layout_marginBottom="10dp"
        android:textColor="@color/black" android:textSize="16sp"
        android:text="FaÃ§a a busca para visualizar os dados."
        app:layout_constraintTop_toBottomOf="@id/guideline5h"
        app:layout_constraintBottom_toTopOf="@id/guideline85h"
        app:layout_constraintStart_toStartOf="@id/guideline1"
        app:layout_constraintEnd_toEndOf="@id/guideline9"/>


    <Button
        android:id="@+id/btnUsarPaciente"
        android:layout_width="0dp" android:layout_height="0dp"
        android:text="Usar este paciente"
        android:enabled="false"
        android:backgroundTint="@color/blue3" android:textColor="@color/blue2"
        app:layout_constraintTop_toBottomOf="@id/guideline85h"
        app:layout_constraintBottom_toTopOf="@id/guideline95h"
        app:layout_constraintStart_toStartOf="@id/guideline1"
        app:layout_constraintEnd_toEndOf="@id/guideline9"/>




</androidx.constraintlayout.widget.ConstraintLayout>

